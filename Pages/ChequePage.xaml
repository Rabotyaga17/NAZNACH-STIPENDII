<Page x:Class="Otdelenie.Pages.ChequePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Otdelenie.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" Height="auto" Width="auto" MinHeight="700" MinWidth="950"
      Title="ChequePage">

    <Grid>
        <FlowDocumentScrollViewer x:Name="Scroll" Margin="30,50,30,60">
            <FlowDocument x:Name="Document" Background="White">

            </FlowDocument>
        </FlowDocumentScrollViewer>
        <Button x:Name="Save" Content="Сохранить" HorizontalAlignment="Left" Margin="663,10,0,0" VerticalAlignment="Top" Width="92" Height="24" FontSize="15" Click="Save_Click" FontFamily="Yu Gothic UI Semibold"/>
        <Button x:Name="Print" Content="Печать" HorizontalAlignment="Left" Margin="780,10,0,0" VerticalAlignment="Top" Width="92" Height="24" FontSize="15" Click="Print_Click" FontFamily="Yu Gothic UI Semibold"/>
        <Button x:Name="Exit" Content="❌" HorizontalAlignment="Left" Margin="40,10,0,0" VerticalAlignment="Top" Width="34" Height="24" FontSize="15" Click="Exit_Click" FontFamily="Yu Gothic UI Semibold"/>
    </Grid>
</Page>
